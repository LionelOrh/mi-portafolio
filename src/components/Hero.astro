import miniproyects from "../assets/miniproyects.webp";
import profile from "../assets/profile.webp";
import Figma from "../assets/Icon/Figma.astro";
import GitHub from "../assets/Icon/GitHub.astro";
import LinkedIn from "../assets/Icon/LinkedIn.astro";
import Youtube from "../assets/Icon/Youtube.astro";
import X from "../assets/Icon/X.astro";
import WhastApp from "../assets/Icon/WhastApp.astro";
import Valores from "../components/Valores.astro";
---

<section class="section-hero">
    <div class="section-hero__container">
        <article class="section-hero__info-user">
            <header>
                <p class="estado">DISPONIBLE PARA TRABAJAR</p>
                <h1 class="title__especialidad">
