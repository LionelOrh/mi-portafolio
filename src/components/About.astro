<style>
    .section-about {
        padding-inline: clamp(1rem, 5vw, 80px);
        font-family: 'Onest', system-ui, sans-serif;
        margin-block: 3rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 100%;
        box-sizing: border-box;
    }

    .section-title {
        display: flex;
        align-items: center;
        gap: 10px;
        color: #ffffff;
        text-shadow: 0 2px 10px rgba(154, 176, 153, 0.3);
        margin-bottom: 30px;
        width: 100%;
        max-width: 1200px;
    }

    .section-title h2 {
        font-size: 1.8rem;
        font-weight: 500;
        margin: 0;
    }

    .about-container {
        display: grid;
        grid-template-columns: minmax(300px, 1fr) 2fr;
        gap: 3rem;
        /* Nuevo fondo con un tono diferente pero armonioso con la paleta del sitio */
        background: linear-gradient(135deg, #3a3852 0%, #4a485e 100%);
        padding: 3rem;
        border-radius: 20px;
        width: 100%;
        max-width: 1200px;
        box-shadow: 0 8px 32px rgba(31, 38, 135, 0.15);
        border: 1px solid rgba(255, 255, 255, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        box-sizing: border-box;
    }

    .about-container:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 40px rgba(31, 38, 135, 0.25);
    }

    .about-image-wrapper {
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 5px 15px rgb(48, 48, 48);
        transform: rotate(-2deg);
        position: relative;
        border-radius: 1px solid rgba(154, 176, 153, 0.7);
        padding: 10px;
        background-color: rgba(0, 0, 0, 0.386);
    
    }

    .about-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 15px;
        transition: filter 0.3s ease;
    }


    .about-content {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        color: rgba(255, 255, 255, 0.9);
    }

    .about-name {
        font-size: 1.5rem;
        font-weight: 600;
        color: #9AB099;
        margin: 0;
        position: relative;
        display: inline-block;
        margin-bottom: 0.5rem;
        padding-bottom: 0.5rem;
        letter-spacing: 0.01em;
    }

    .about-name::after {
        content: "";
        position: absolute;
        bottom: 0;
        left: 0;
        width: 60px;
        height: 2px;
        background-color: rgba(154, 176, 153, 0.7);
        border-radius: 2px;
        transition: width 0.3s ease;
    }

    .about-container:hover .about-name::after {
        width: 100px;
    }

    .about-text {
        margin: 0;
        line-height: 1.7;
        font-size: 1rem;
        text-shadow: 0 1px 1px rgba(0, 0, 0, 0.1);
        letter-spacing: 0.01em;
    }

    /* Estilo para palabras resaltadas */
    .highlight {
        color: #9AB099;
        font-weight: 600;
        position: relative;
        white-space: nowrap;
    }


    /* Activamos el subrayado al hacer hover sobre el contenedor */
    .about-container:hover .highlight::after {
        width: 100%;
    }

    .about-text:not(:last-child) {
        margin-bottom: 0.8rem;
    }

    @media (max-width: 830px) {
        .about-container {
            grid-template-columns: 1fr;
            padding: 1.5rem;
        }

        .about-image-wrapper {
            height: 320px;
            /* Reducimos la rotaci칩n en dispositivos m칩viles */
            transform: perspective(800px) rotateY(-5deg);
            margin-bottom: 1rem;
        }

        .about-name {
            margin-top: 1rem;
        }
    }

    @media (max-width: 480px) {
        .about-image-wrapper {
            height: 250px;
        }

        .about-text {
            font-size: 0.9rem;
        }
    }
</style>
