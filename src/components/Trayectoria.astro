        border-radius: 20px;
        box-shadow: 0 8px 32px rgba(31, 38, 135, 0.15);
        border: 1px solid rgba(255, 255, 255, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    
    .section_trayectoria__container:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 40px rgba(31, 38, 135, 0.25);
    }
    
    .section_title {
        display: flex;
        align-items: center;
        gap: 10px;
        color: #ffffff;
        text-shadow: 0 2px 10px rgba(154, 176, 153, 0.3);
        width: 100%; /* Para que el encabezado ocupe todo el ancho disponible */
        max-width: 1200px; /* Igual que el timeline para consistencia */
    }
    .section_title h3 {
        font-size: 1.8rem;
        font-weight: 500;
    }
    .container {
        display: flex;
        gap: 20px;
        position: relative;
        min-height: 100px;
        padding: 50px;
        color: rgb(255, 255, 255);
    }
    .left,
    .right {
        flex: 1;
    }
    .left {
        display: flex;
        flex-direction: column;
        align-items: end;
        text-align: end;
    }
    .right {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }
    .image-container {
        position: relative;
        min-width: 60px;
    }
    .hat {
        position: absolute;
        top: -10px;
        left: 50%;
        transform: translateX(-50%);
        z-index: 1;
        background-color: rgba(255, 255, 255, 0.9);
        border-radius: 50%;
        padding: 5px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        transition: transform 0.3s ease;
    }
    
    .container:hover .hat {
        transform: translateX(-50%) translateY(-3px);
    }
    
    .container:before {
        content: "";
        position: absolute;
        top: 0;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 2px;
        background: rgba(255, 255, 255, 0.8);
        z-index: 0;
        box-shadow: 0 0 8px rgba(255, 255, 255, 0.5);
    }
    .left_title,
    .right_title {
        font-size: 1.5rem;
        font-weight: 600;
        /* Reemplazamos el gradiente por un color s√≥lido distintivo que contrasta bien con el fondo */
        color: #9AB099;
        text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
        position: relative;
        display: inline-block;
        margin-bottom: 10px;
        letter-spacing: 0.01em;
    }
    
    /* L√≠nea decorativa bajo los t√≠tulos con color s√≥lido */
