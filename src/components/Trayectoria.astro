<style>
    .section_trayectoria {
        margin-top: 2rem;
        width: 100%;
        padding-inline: clamp(1rem, 5vw, 80px);
        font-family: "Poppins", sans-serif;
    }
    .section_trayectoria__container {
        background: #2e9fb1;
        max-width: 100%;
        border-radius: 20px;
    }
    .section_title {
        font-size: 2rem;
        font-weight: 500;
        display: flex;
        align-items: center;
        gap: 10px;
        margin-bottom: 2rem;
    }
    .container {
        display: flex;
        gap: 20px;
        position: relative;
        min-height: 100px;
        padding: 50px;
        color: rgb(255, 255, 255);
    }
    .left,
    .right {
        flex: 1;
    }
    .left {
        display: flex;
        flex-direction: column;
        align-items: end;
        text-align: end;
    }
    .right {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }
    .image-container {
        position: relative;
        min-width: 60px;
    }
    .hat {
        position: absolute;
        top: -10px;
        left: 50%;
        transform: translateX(-50%);
        z-index: 1;
        background-color: rgb(202, 202, 202);
        border-radius: 50%;
    }
    .container:before {
        content: "";
        position: absolute;
        top: 0;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 2px;
        background: white;
        z-index: 0;
    }
    .left_title,
    .right_title {
        font-size: 1.5rem;
    }
    /* üß† Pantallas mayores a 768px: dise√±o en fila */
    @media (min-width: 768px) {
        .container {
            flex-direction: row;
            text-align: initial;
            padding: 50px;
        }

        .left_title,
        .right_title {
            font-size: 1.1rem;
        }

        .left_a√±o,
        .right_description {
            font-size: 0.95rem;
        }

        .left {
            align-items: flex-end;
            text-align: right;
        }

        .right {
            align-items: flex-start;
            text-align: left;
        }

        .image-container {
            min-width: 60px;
            height: auto;
        }
    }

    @media (max-width: 675px) {

        .container {
            padding: 1.5rem 1rem;
            gap: 16px;
        }

        .left_title,
        .right_title {
            font-size: 1.1rem;
        }

        .left_a√±o,
        .right_description {
            font-size: 0.90rem;
        }

        .hat {
